{
    "name": "Player",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Player's display name"
      },
      "team": {
        "type": "string",
        "enum": [
          "Alpha",
          "Delta"
        ],
        "description": "Which team the player belongs to"
      },
      "role": {
        "type": "string",
        "enum": [
          "Leader",
          "Player"
        ],
        "description": "Player's role in the team"
      },
      "sub_team": {
        "type": "string",
        "description": "Sub-team assignment (A1-A5 or D1-D5)"
      },
      "match_id": {
        "type": "string",
        "description": "Current match identifier"
      },
      "avatar": {
        "type": "string",
        "default": "default",
        "description": "Player's avatar selection"
      },
      "status": {
        "type": "string",
        "enum": [
          "waiting",
          "assigned",
          "in_battle",
          "completed",
          "redeployed"
        ],
        "default": "waiting",
        "description": "Current player status"
      }
    },
    "required": [
      "name",
      "team",
      "role"
    ]
  }