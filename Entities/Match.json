{
    "name": "Match",
    "type": "object",
    "properties": {
      "match_id": {
        "type": "string",
        "description": "Unique match identifier"
      },
      "company": {
        "type": "string",
        "description": "Selected company for research"
      },
      "status": {
        "type": "string",
        "enum": [
          "setup",
          "waiting_for_leaders",
          "active",
          "completed"
        ],
        "default": "setup",
        "description": "Current match status"
      },
      "start_time": {
        "type": "string",
        "format": "date-time",
        "description": "When the match started"
      },
      "duration_minutes": {
        "type": "number",
        "default": 60,
        "description": "Match duration in minutes"
      },
      "alpha_leader_ready": {
        "type": "boolean",
        "default": false,
        "description": "Alpha team leader ready status"
      },
      "delta_leader_ready": {
        "type": "boolean",
        "default": false,
        "description": "Delta team leader ready status"
      },
      "alpha_score": {
        "type": "number",
        "default": 0,
        "description": "Alpha team final score"
      },
      "delta_score": {
        "type": "number",
        "default": 0,
        "description": "Delta team final score"
      },
      "battles": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "battle_id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "sub_teams": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "status": {
              "type": "string",
              "enum": [
                "waiting",
                "active",
                "completed"
              ]
            },
            "alpha_submission": {
              "type": "object"
            },
            "delta_submission": {
              "type": "object"
            }
          }
        },
        "default": []
      }
    },
    "required": [
      "match_id"
    ]
  }